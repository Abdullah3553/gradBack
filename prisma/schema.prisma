// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Authentication_method {
  id        Int    @id @default(autoincrement())
  title     String @unique
  file_path String
}

model Role {
  id   Int    @id @default(autoincrement())
  name String

}

model Privilege {
  id    Int     @id @default(autoincrement())
  name  String  @db.VarChar(255)
  read  Boolean @default(false)
  write Boolean @default(false)
}

model Authenticator {
  id           Int    @id @default(autoincrement())
  signature    String
  priority     Int
  access_token String
}

model User {
  id    Int     @id @default(autoincrement())
  username String @unique
  birth_date DateTime
  email String @unique
  country    String ?
  street     String ?
  city       String ?
}

